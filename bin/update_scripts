#!/usr/bin/env bash

if [ ! -d ${SCRIPTS_DIR} ]; then
    mkdir -p $SCRIPTS_DIR
fi

cd $SCRIPTS_DIR

# check if the project stackcomposed exist with VCS
if [ ! -d ${SCRIPTS_DIR}/.hg ]; then
    cd ..
    rm -rf ${SCRIPTS_DIR}
    hg clone https://bitbucket.org/smbyc/scripts Scripts
    cd $SCRIPTS_DIR
fi

# synchronize changes with repository, update and clean
hg pull https://bitbucket.org/smbyc/scripts
hg update -C
hg status -un|xargs rm 2> /dev/null

# print status
echo -e "\nThe last commit:\n"
hg tip
echo -e "Update finished\n"
